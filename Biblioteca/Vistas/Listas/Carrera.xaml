<Page
    x:Class="Biblioteca.Carrera"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Biblioteca"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ListView Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="x:String">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="ColumnaCodigo" MaxWidth="50" />
                        <ColumnDefinition x:Name="ColumnaNombre" Width="2*" />
                        <ColumnDefinition x:Name="ColumnaAsesor" Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="Codigo" Grid.Column="0" Text="{x:Bind}"/>
                    <TextBlock x:Name="Nombre" Grid.Column="1" Text="{x:Bind}"/>
                    <TextBlock x:Name="Asesor" Grid.Column="2" Text="{x:Bind}"/>
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>

        <x:String>Código</x:String>
        <x:String>Ingeniería en Infotecnología</x:String>
        <x:String>Ingeniería Civil</x:String>
        <x:String>Ingeniería Industrial</x:String>
    </ListView>
</Page>
